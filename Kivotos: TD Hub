local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Kivotos: TD",
   LoadingTitle = "Tower Defense Game",
   LoadingSubtitle = "by Infinity_Scripter",
})

local MainTab = Window:CreateTab("Home", nil)
local MainSection = MainTab:CreateSection("Main")

local Button1 = MainTab:CreateButton({
   Name = "Spawn Shiroko (Cost: 300)",
   Callback = function()
       local args = {
           [1] = "Shiroko",
           [2] = game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame,
           [4] = 0
       }
       game:GetService("ReplicatedStorage").Functions.SpawnStudent:InvokeServer(unpack(args))
   end,
})

local Button2 = MainTab:CreateButton({
   Name = "Spawn Hoshino (Cost: 525)",
   Callback = function()
       local args = {
           [1] = "Hoshino",
           [2] = game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame,
           [4] = 0
       }
       game:GetService("ReplicatedStorage").Functions.SpawnStudent:InvokeServer(unpack(args))
   end,
})

